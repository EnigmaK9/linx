import os

def seleccionar_archivos(carpeta, limite_mb):
    limite_bytes = limite_mb * 1024 * 1024
    print(limite_bytes, limite_mb)
    archivos = [(archivo, os.path.getsize(os.path.join(carpeta, archivo)))
                for archivo in os.listdir(carpeta) if os.path.isfile(os.path.join(carpeta, archivo))]
    archivos.sort(key=lambda x: x[1], reverse=True)  # Opcionalmente, ordenar por tamaño

    total_seleccionado = 0
    seleccionados = []

    for archivo, tamaño in archivos:
        if total_seleccionado + tamaño <= limite_bytes:
            seleccionados.append(archivo)
            total_seleccionado += tamaño

    return seleccionados, total_seleccionado

# Uso de la función
carpeta =  "/Users/tatan/OneDrive/Documents/LINX/Prueba1"
limite_mb = 54
archivos_seleccionados, total_bytes = seleccionar_archivos(carpeta, limite_mb)
print("Archivos seleccionados:", archivos_seleccionados)
print("Total de bytes:", total_bytes)
